#!/bin/bash

select_remote(){
	echo "Chon Remote: "
	selects=$(rclone listremotes)
	remotes=()
	for entry in ${selects}; do
		select=${entry//:}
	    remotes+=(${select})
	done

	PS3="Nhap lua chon cua ban [0 = Thoat]: "
	select remote in "${remotes[@]}"
	do
	    remote=${remote}
	    break
	done

	if [[ -z "${remote}" ]]; then
		ALERT=$(printf "${RED}Remote ban chon khong chinh xac.${NC}\n")
	fi

	if ! [[ ${remote} =~ ^[_a-zA-Z][_a-zA-Z0-9]*$ ]]; then
		ALERT=$(printf "${RED}Remote ban chon khong chinh xac.${NC}\n")
	fi
}

select_date(){
	echo "Chon ngay: "
    selects=$(rclone lsf ${remote}:${IPADDRESS})
    dates=()
    for entry in ${selects}; do
    	select=${entry///}
        dates+=(${select})
    done
    PS3="Nhap lua chon cua ban [0 = Thoat]: "
    select date in "${dates[@]}"
    do
        date=${date}
        break
    done

    # date "+%d-%m-%Y" -d "${date}" > /dev/null  2>&1

    # if [[ $? != 0 ]]; then
    # 	ALERT=$(printf "${RED}Gia tri ban nhap khong dung.${NC}\n")
    # fi
    if ! [[ ${date} =~ ^[0-9]{2}-[0-9]{2}-[0-9]{4}$ ]]; then
    	ALERT=$(printf "${RED}Gia tri ban nhap khong dung.${NC}\n")
    fi
}

_run(){
	select_remote
	select_date

	if [[ -z "${ALERT}" ]]; then
		echo ""
		echo "Dang load danh sach. Vui long doi..."
		echo ""
		rclone lsf ${remote}:/${IPADDRESS}/${date}
		echo ""
	else
		printf "${ALERT}\n"
	fi
}

_run
menu_ggdrive