# shellcheck disable=SC1091
source /var/hostvn/menu/helpers/function

input(){
	read -r -p "Nhap vao user muon doi mat khau: " ftp_user
	read -r -p "Nhap vao mat khau moi: " ftp_pwd
}


change_pass(){
	pure-pw passwd ftp_user <<EOF
${ftp_pwd}
${ftp_pwd}
EOF
	pure-pw mkdb
}

_run(){
	select_domain
	set_var
	input

	if ! if_pureftpd_user_exists ftp_user; then
		ALERT=$(printf "${RED}FTP User khong ton tai.${NC}\n")
	fi

	validate_user "${ftp_user}"

	if [[ -z "${ALERT}" ]]; then
		change_pass
		clear
		printf "${GREEN}Doi password FTP thanh cong.${NC}\n"
	else
	  clear
		printf "${ALERT}\n"
	fi
}

pureftpd_status="$(systemctl status pure-ftpd.service | grep 'Active' | cut -f2 -d':' | xargs | cut -f1 -d' ' | xargs)"

if [ "${pureftpd_status}" != "active" ]; then
    printf "${RED}PURE-FTP khong hoat dong hoac chua duoc cai dat. Vui long kiem tra lai.${NC}\n"
else
    _run
    menu_ftp
fi