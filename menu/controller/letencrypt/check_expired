#!/bin/bash

# shellcheck disable=SC1091
source /var/hostvn/menu/helpers/function

check_expired(){
	if [[ -f "/etc/letsencrypt/live/${domain:?}/cert.pem" ]]; then
		clear
	    openssl x509 -noout -dates -in /etc/letsencrypt/live/"${domain}"/cert.pem
	else
		clear
		printf "${RED}Ten mien nay chua Ä‘uoc cai dat Let's Encrypt.${NC}\n"
	fi
}

run(){
	select_domain

	if [ -z "${ALERT}" ]; then
		check_expired
	else
		clear
        printf "${ALERT}\n"
    fi
}

run
echo ""
menu_letencrypt