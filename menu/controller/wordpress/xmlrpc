# shellcheck disable=SC2154
# shellcheck disable=SC1091
source /var/hostvn/menu/helpers/function

find_string(){
    string=$(grep -rnw "/etc/nginx/conf.d/${domain}.conf" -e 'disable_xmlrpc.conf')
}

xmlrpc(){
    if [ -z "${string}" ]; then
        sed -i '/index.php/a include /etc/nginx/wordpress/disable_xmlrpc.conf;' /etc/nginx/conf.d/"${domain}".conf
        noti="${GREEN}Bat chan XMLRPC thanh cong.${NC}/n"
    else
        sed -i '/disable_xmlrpc.conf/d' /etc/nginx/conf.d/"${domain}".conf
        noti="${GREEN}Bo chan XMLRPC thanh cong.${NC}/n"
    fi
}

_run(){
    ALERT=""
    select_domain

    if [ -z "${ALERT}" ]; then
        find_string
        xmlrpc
        restart_service
        clear
        printf "$noti\n"
    else
        clear
        printf "${ALERT}\n"
    fi
}

_run
wp_menu_advanced