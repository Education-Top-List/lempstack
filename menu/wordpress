#!/bin/bash

CHOICE=1

echo "========================================="
echo "            Quan ly WordPress            "
echo "========================================="
echo

while [ "${CHOICE}" != "0" ]
do
    echo "1. Kiem tra phien ban WordPress"
    echo "2. Cap nhat phien ban WordPress"
    echo "3. Cap nhat plugins (Tru plugins tra phi)"
    echo "4. Toi ưu database"
    echo "5. Repair database"
    echo "6. Sao lưu du lieu"
    echo "7. Khoi phuc du lieu"
    echo " ----------------------------------------"
    read -r -p " Nhap vao lua chon cua ban [0 = Thoat] " CHOICE
    if [ -z "${CHOICE}" ]
    then
        CHOICE=1
        continue
    fi
    case ${CHOICE} in
        1) wp_version ;;
        2) wp_update ;;
		3) wp_update_plugins ;;
		4) wp_optimize_db ;;
		5) wp_repair_db ;;
		6) wp_backup ;;
		7) echo "Dang nghi..."; sleep 2; menu_wp ;;
        0) menu_primary ;;
        *) clear; printf "${RED}Lua chon cua ban khong chinh xac. Vui long chon lai.${NC}\n";;
    esac
done
