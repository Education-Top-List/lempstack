#!/bin/bash

CHOICE=1

echo "============="
echo "Quan ly Cache"
echo "============="
echo

while [ "${CHOICE}" != "0" ]
do
    echo "1. Memcached"
    echo "2. Redis"
    echo "2. Xo√° Cache"
    echo " -----------"
    read -r -p " Nhap vao lua chon cua ban [0 = Thoat] " CHOICE
    if [ -z "${CHOICE}" ]
    then
        CHOICE=1
        continue
    fi
    case ${CHOICE} in
        1) clear; memcached_c ;;
        2) clear; redis_c ;;
        3) clear; clear_cache ;;
        0) clear; menu_primary ;;
        *) clear; printf "${RED}Lua chon cua ban khong chinh xac. Vui long chon lai.${NC}\n";;
    esac
done