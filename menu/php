#!/bin/bash

CHOICE=1

echo "=================================="
echo "           Quan ly PHP            "
echo "=================================="
echo

while [ "${CHOICE}" != "0" ]
do
    echo "1. Kiem tra phien ban PHP mac dinh"
    echo "2. Cap nhat phien ban PHP mac dinh"
    echo "3. Khoi Ä‘ong lai PHP              "
    echo "4. Cau hinh thong so PHP          "
    echo " ---------------------------------"
    read -r -p " Nhap vao lua chon cua ban [0 = Thoat] " CHOICE
    if [ -z "${CHOICE}" ]
    then
        CHOICE=1
        continue
    fi
    case ${CHOICE} in
        1) php -v; menu_php ;;
        2) yum -y update php php-fpm; menu_php ;;
        3)
            systemctl restart php-fpm
            if [[ "${php2_release}" == "yes" ]]; then
                systemctl restart "${php2_version}"-php-fpm
            fi
            menu_php
            ;;
        4) php_setting ;;
        0) menu_primary ;;
        *) clear; printf "${RED}Lua chon cua ban khong chinh xac. Vui long chon lai.${NC}\n";;
    esac
done