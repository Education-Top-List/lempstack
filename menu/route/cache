CHOICE=1

printf "${GREEN}=============${NC}\n"
printf "${GREEN}Quan ly Cache${NC}\n"
printf "${GREEN}=============${NC}\n"
echo ""

while [ "${CHOICE}" != "0" ]
do
    printf "${GREEN}1. Memcached${NC}\n"
    printf "${GREEN}2. Redis${NC}\n"
    printf "${GREEN}3. Xo√° Cache${NC}\n"
    printf "${GREEN} -----------${NC}\n"
    read -r -p " Nhap vao lua chon cua ban [0 = Thoat] " CHOICE
    if [ -z "${CHOICE}" ]
    then
        CHOICE=1
        continue
    fi
    case ${CHOICE} in
        1) clear; memcached_c ;;
        2) clear; redis_c ;;
        3) clear; clear_cache ;;
        0) clear; menu_primary ;;
        *) clear; printf "${RED}Lua chon cua ban khong chinh xac. Vui long chon lai.${NC}\n";;
    esac
done