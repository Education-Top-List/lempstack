CHOICE=1

printf "${GREEN}===================${NC}\n"
printf "${GREEN}Quan ly SSL tra phi${NC}\n"
printf "${GREEN}===================${NC}\n"
echo

while [ "${CHOICE}" != "0" ]
do
    printf "${GREEN}1. Cai Ä‘at SSL${NC}\n"
    printf "${GREEN}2. Go bo SSL${NC}\n"
    printf "${GREEN} -------------${NC}\n"
    read -r -p " Nhap vao lua chon cua ban [0 = Thoat] " CHOICE
    if [ -z "${CHOICE}" ]
    then
        CHOICE=1
        continue
    fi
    case ${CHOICE} in
        1) clear; ssl_create ;;
        2) clear; ssl_remove ;;
        0) clear; menu_ssl ;;
        *) clear; printf "${RED}Lua chon cua ban khong chinh xac. Vui long chon lai.${NC}\n";;
    esac
done